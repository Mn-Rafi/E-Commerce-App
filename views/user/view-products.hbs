<section>
      <div class="container mt-10">
        <div class="row">
          {{#if isProductsEmpty}}
          <h1>No Products Found</h1>
          {{else}}
          {{#each products}}
            <div class="col-md-3">
              <div class="card card-height" style="width: 15rem;">
                <img
                  src="/product-images/{{this._id}}.jpg"
                  class="card-img-top image-container"
                  alt="..."
                />
                <div class="card-body">
                  <div class="details-height">
                    <h6 class="card-title">{{this.tile}}</h6>
                  <h6 class="card-text">{{this.category}}</h6>
                  <p class="card-text">{{this.Description}}</p>
                  </div>
                  <a href="#" class="btn btn-primary">Add to Cart</a>
                </div>
              </div>
            </div>
          {{/each}}
          {{/if}}

        </div>
      </div>
    </section>